<div class ="container">
 <div class="row" >
  <h1 class="description" id="1" style="color:#36454f; border:none; padding-top: 50px">Education</h1><h4 style="float:right; top: 20px;"><%=link_to "See All"%></h4>
  <% @educations.each do |p| %>
  <div class= "col-md-4"> 
   <div class="img" style= "background-image: url(<%= p.images.first.url %>)">
     <%= link_to "Show Me!", project_path(p), class:"linkoffun" %></div> 
     <h2><%= p.campaign_title %> </h2>
     <h4 class="text"><b>Summary: </b><%= p.summary %> </h4>
     <h4><b>Amount needed: USD </b><%= number_with_delimiter(p.amount_needed) %> </h4>
     <h4><b>amount pledged: USD </b><%= number_with_delimiter(p.amount_achieved) %> </h4>
     <div class="task-status">
  <div class="status-bar">
    <div class="status-track">
       <%perc =number_to_percentage((p.amount_achieved.to_f/p.amount_needed.to_f)*100, precision: 0)%>
      <span class="status-text"><%=perc%></span>
      <div class="status-fill" style="width:<%=perc%>"></div>
    </div>
  </div>
</div>
   </div>
   <% end %>
 </div>
</div>

<% @educations.each do |p| %>
<%= link_to "Show Me!", project_path(p), class:"linkoffun" %>
<% end %>




